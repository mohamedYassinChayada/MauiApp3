<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:MauiApp3.Converters"
             xmlns:viewmodel="clr-namespace:MauiApp3.ViewModel"
             x:Class="MauiApp3.MainPage">

    <ContentPage.BindingContext>
        <viewmodel:MatchViewModel />
    </ContentPage.BindingContext>

    <ContentPage.Resources>
        <converters:MatchResultConverter x:Key="Converter" />
    </ContentPage.Resources>

    <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">
        
        <Label Text="{Binding CurrentMatch.MatchNumber}" 
               FontSize="24" 
               HorizontalOptions="Center"/>

        <Frame BackgroundColor="{Binding CurrentMatch.Result, Converter={StaticResource Converter}, ConverterParameter=TeamA}" 
               Padding="20">
            <Label Text="{Binding CurrentMatch.TeamA}" 
                   FontSize="32" 
                   HorizontalOptions="Center"/>
        </Frame>

        <Label Text="VS" 
               FontSize="28" 
               HorizontalOptions="Center"/>

        <Frame BackgroundColor="{Binding CurrentMatch.Result, Converter={StaticResource Converter}, ConverterParameter=TeamB}" 
               Padding="20">
            <Label Text="{Binding CurrentMatch.TeamB}" 
                   FontSize="32" 
                   HorizontalOptions="Center"/>
        </Frame>

        <Label Text="{Binding CurrentMatch.Result, Converter={StaticResource Converter}, ConverterParameter=ResultText}"
               TextColor="{Binding CurrentMatch.Result, Converter={StaticResource Converter}, ConverterParameter=ResultColor}"
               FontSize="24" 
               HorizontalOptions="Center"/>

    </VerticalStackLayout>

</ContentPage>
